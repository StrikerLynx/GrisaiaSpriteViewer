<Window x:Class="Grisaia.SpriteViewer.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grisaia.SpriteViewer"
        mc:Ignorable="d"
        Title="Grisaia Sprite Viewer" Height="156" Width="400" ResizeMode="NoResize" UseLayoutRounding="True" SnapsToDevicePixels="True" Background="#FFF0F0F0" Icon="Resources/App.ico" WindowStartupLocation="CenterScreen" ContentRendered="OnContentRendered" Loaded="OnLoaded">
  <Grid>
    <StackPanel Margin="15,15,15,0">
      <Label x:Name="labelStatus" Content="Caching Sprites..."/>
      <Label x:Name="labelGame" Content="Current Game: Grisaia no Kajitsu"/>
    </StackPanel>
    <ProgressBar x:Name="progressBar" VerticalAlignment="Bottom" Maximum="1" Height="24" Margin="10,0,10,10"/>
  </Grid>
</Window>
